<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcarpenter.synthesizer.SynthesizerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button1"
    android:id="@+id/Fbutton"
    app:layout_constraintTop_toBottomOf="@+id/Ebutton"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/Ebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button2"
        app:layout_constraintTop_toBottomOf="@+id/Fbutton"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/Challenge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button3"
        app:layout_constraintLeft_toRightOf="@+id/Ebutton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="-7dp" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ebutton"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="94dp" />

    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Challenge1"
        app:layout_constraintLeft_toRightOf="@+id/numberPicker"
        android:layout_marginTop="208dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/Challenge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge 2"
        app:layout_constraintLeft_toRightOf="@+id/Fbutton"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-7dp"
        app:layout_constraintBottom_toTopOf="@+id/Challenge1" />

    <Button
        android:id="@+id/TwinkleTwinkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TwinkleTwinkle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/Challenge2"
        android:layout_marginLeft="-4dp" />

    <NumberPicker
        android:id="@+id/TwinkleP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@+id/TwinkleTwinkle"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/PlayMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoMiddle?"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Challenge1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/LeanOnMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeanOnMe"
        android:layout_marginTop="-11dp"
        app:layout_constraintTop_toBottomOf="@+id/TwinkleTwinkle"
        app:layout_constraintLeft_toRightOf="@+id/Challenge1"
        android:layout_marginLeft="0dp" />


</android.support.constraint.ConstraintLayout>
